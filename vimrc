imap jj <Esc>
xnoremap p pgvy
nnoremap - $
vnoremap - $
set tabstop=8 softtabstop=0 expandtab shiftwidth=4 smarttab

" split config
" open new split panes to right and bottom, which feels more natural
set splitbelow
set splitright

" quicker window movement
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l
